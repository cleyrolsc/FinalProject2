{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "baseUrl": "./src"
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"], // Ensure this line is included
  "exclude": ["node_modules"]
}